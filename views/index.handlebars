<h2>Ready to Eat Burgers!</h2>

<ul>
  {{#each burger}}
  {{#unless devoured}}
  {{> burgers/burgers-block burgername=burgername id=id devoured=this.devoured}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>
{{!-- <h2>Ready to Eat Burgers!</h2> --}}

<ul>
  {{#each burger}}
  {{#if devoured}}
  {{> burgers/burgers-block burgername=burgername id=id devoured=this.devoured}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add Your Favorite Burgers</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Place Order?</label><br>
    {{!-- <input type="radio" name="devoured" value="1" > Devoured!<br> --}}
    <input type="radio" name="devoured" value="0" checked> Order Burger
  </div>

  <button type="submit">Submit Order</button>
</form>